<script>
    const container = document.getElementById('particles');
    const icons = ['üå∏', 'üåπ', '‚ù§Ô∏è', 'ü´ß', 'üíñ', '‚ú®', 'üåº'];
    function createP() {
        const p = document.createElement('div');
        p.className = 'particle';
        p.innerHTML = icons[Math.floor(Math.random() * icons.length)];
        p.style.left = Math.random() * 100 + 'vw';
        p.style.fontSize = (Math.random() * 20 + 20) + 'px';
        p.style.animationDuration = (Math.random() * 2 + 3) + 's';
        container.appendChild(p);
        setTimeout(() => p.remove(), 5000);
    }
    setInterval(createP, 120);
    function nextPage(h, s) { document.getElementById('page'+h).style.display='none'; document.getElementById('page'+s).style.display='block'; }
    function checkPass() { if(document.getElementById('pass').value==="143") nextPage(2,3); else alert("Sahi code dalo baby! ‚ù§Ô∏è"); }
</script>
